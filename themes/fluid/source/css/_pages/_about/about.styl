.about-avatar
  position relative
  margin -8rem auto 1rem
  width 10rem
  height 10rem
  z-index 3
  animation filter-huang 24s linear infinite

  img
    width 100%
    height 100%
    border-radius 50%
    background-color transparent
    object-fit cover
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)

.about-info
  & > div
    margin-bottom .5rem

.about-name
  font-size 14rem
  font-weight bold
  color #00fa00
  text-shadow #092d07 7px 7px 7px
  animation filter-huang 24s linear infinite


.about-intro
  font-size 0.7rem
  color #55906c
  text-shadow #092d07 1px 1px 3px

.about-icons
  & > a:not(:last-child)
    margin-right .5rem

  & > a > i
    font-size 1rem
    color #55906c
